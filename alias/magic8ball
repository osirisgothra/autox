alias magic8ball='echo "ask me something, a yes or no question [and press enter]:"; read -e; RANDOM_SEED=$REPLY;echo "thinking about that... please wait a minute..."; sleep ${RANDOM:1}; declare -a reps=( yes no "not likely" "maybe" "perhaps" "outlook not so good" "ask me again later" "unable to determine" "definitely" "definitely no" "definitely yes" "it might be better if you dont know" ); IDX=$(( RANDOM / (32767/${#reps[@]}) )); echo ${reps[IDX]}'
