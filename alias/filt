alias filt='x="";while [[ $x != q ]]; do clear; echo -e "Press CTRL+C any time to abort\nEnter Text then ENTER";read txt;clear;echo "Output From Filters";eval printf -- "-%0.0s" {1..60};echo;for i in $(cat filters); do echo -ne $i": "; echo $txt | $i | tee /tmp/$i.out; done;true                               ;eval printf -- "-%0.0s" {1..60};echo; read -p "press any key to do over, q to quit" -sn1 x;done;clear;echo'
