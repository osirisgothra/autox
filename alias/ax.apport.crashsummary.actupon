alias ax.apport.crashsummary.actupon='if sudo true; then { echo "[r]emove, [a]rchive, or [l]eave crash data? [r,a,l] (default=l):"; read -sn1; case $REPLY in r) echo -ne "removing crash data..."; sudo rm /var/crash/* -fR && echo "OK" || echo "failed($?)";; a) ARC=$(sudo mktemp /var/cache/crash-history-XXX.tar || sudo mktemp); echo "archiving into ${ARC}, please be patient...";sudo tar -cfq "$ARC" /var/crash/*; sudo rm -fR /var/crash/* && echo "ok" || echo "fail";; *) echo "aborted removal of any kind.";; esac; }; else echo "need sudo or administrative rights to modify crash history, leaving as is..."; fi'
