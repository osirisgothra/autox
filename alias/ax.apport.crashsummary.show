alias ax.apport.crashsummary.show='cd /var/crash;eval resize;clear;XTR=$(( (($COLUMNS)-68)/2 ));IFS=" ";for x in *.crash; do unset ITM;for f in $(ax.data.crashfields); do eval $f'\''="$(grep -Po "(?<=^'\''${f}'\'': ).*" "${x}" | tr -d "\n")"'\''; done; y=${x##*_};[[ $ExecutablePath != "" ]] && u=$(id -unr ${y//[^0-9]/}) || { export ExecutablePath=/etc/apport; u="nobody"; };p=${y%%.[0-9]*.crash}; printf "%-7.7s %-$((16+XTR)).$((16+XTR))s %10.10s %-13.13s %$((14+XTR)).$((14+XTR))s\n" "$ProblemType" "$ExecutablePath" "$Date" "$u" "$p";done;cd ~-;'
